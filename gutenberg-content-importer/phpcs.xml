<?xml version="1.0"?>
<ruleset name="WordPress Plugin">
    <description>WordPress Coding Standards for Gutenberg Content Importer Plugin</description>

    <!-- Include WordPress Coding Standards -->
    <rule ref="WordPress"/>

    <!-- Include WordPress-Extra -->
    <rule ref="WordPress-Extra"/>

    <!-- Include WordPress-Docs -->
    <rule ref="WordPress-Docs"/>

    <!-- Exclude some rules that are too strict for this project -->
    <rule ref="WordPress.Files.FileName.NotHyphenatedLowercase">
        <exclude-pattern>*/node_modules/*</exclude-pattern>
        <exclude-pattern>*/vendor/*</exclude-pattern>
    </rule>

    <!-- Allow . in hook names -->
    <rule ref="WordPress.NamingConventions.ValidHookName">
        <properties>
            <property name="additionalWordDelimiters" value="."/>
        </properties>
    </rule>

    <!-- Allow short array syntax -->
    <rule ref="Generic.Arrays.DisallowShortArraySyntax">
        <exclude-pattern>*/tests/*</exclude-pattern>
    </rule>

    <!-- Exclude vendor and node_modules -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/wp-env/*</exclude-pattern>

    <!-- Include all files in the plugin directory -->
    <file>.</file>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Show sniff codes in all reports -->
    <arg value="s"/>

    <!-- Show colors in console -->
    <arg value="n"/>

    <!-- Show source codes in all reports -->
    <arg value="v"/>
</ruleset>

